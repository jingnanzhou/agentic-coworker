
{
    "tenants":[
        {
            "name":"default",
            "description": "Default tenant",
            "enabled": true,
            "scopes":[
            {
                "name": "mcp:tools",
                "description": "access mcp tools",
                "protocol": "openid-connect",
                "attributes": {
                    "include.in.token.scope": true 
                }
            }
            ],
            "roles": [
                {"name":"admin", "description":"administration"},
                {"name":"agent-manager", "description":" manage agent"},
                {"name":"agent", "description": " agent role"}
            ],

            "clients":[
                {
                    "name": "agent-client",
                    "enabled": true,
                    "protocol": "openid-connect",
                    "publicClient": true,
                    "standardFlowEnabled": true,
                    "serviceAccountsEnabled": false,
                    "directAccessGrantsEnabled": true,
                    "redirectUris": ["http://localhost:3000/*"],
                    "webOrigins": ["*"],
                    "mapper":{
                            "name": "user_type",
                            "protocol": "openid-connect",
                            "protocolMapper": "oidc-usermodel-attribute-mapper",
                            "consentRequired": false,
                            "config": {
                                "user.attribute": "user_type",
                                "claim.name": "user_type",
                                "jsonType.label": "String",
                                "id.token.claim": "true",
                                "access.token.claim": "true",
                                "userinfo.token.claim": "true",
                                "multivalued": "false"
                            }
                        }
                },
                {
                    "name":"agent-host",
                    "secret":"host-secret",
                    "enabled": true,
                    "protocol": "openid-connect",
                    "publicClient": false,
                    "serviceAccountsEnabled": true,
                    "standardFlowEnabled": true,
                    "redirectUris": ["http://localhost:3000/*"],
                    "webOrigins": ["*"],
                    "directAccessGrantsEnabled": true,
                    "clientAuthenticatorType": "client-secret",

                    "mapper":{
                            "name": "user_type",
                            "protocol": "openid-connect",
                            "protocolMapper": "oidc-usermodel-attribute-mapper",
                            "consentRequired": false,
                            "config": {
                                "user.attribute": "user_type",
                                "claim.name": "user_type",
                                "jsonType.label": "String",
                                "id.token.claim": "true",
                                "access.token.claim": "true",
                                "userinfo.token.claim": "true",
                                "multivalued": "false"
                            }
                        }

                },
                {
                    "name":"agent-dev",
                    "secret":"securepass",
                    "enabled": true,
                    "protocol": "openid-connect",
                    "publicClient": false,
                    "serviceAccountsEnabled": true,
                    "standardFlowEnabled": true,
                    "redirectUris": ["http://localhost:3000/*"],
                    "webOrigins": ["*"],
                    "directAccessGrantsEnabled": true,
                    "clientAuthenticatorType": "client-secret",

                    "mapper":{

                        "name": "client_type_mapping",
                        "protocol": "openid-connect",
                        "protocolMapper": "oidc-hardcoded-claim-mapper",
                        "consentRequired": false,
                        "config": {
                            "claim.name": "client_type",
                            "claim.value": "agent",
                            "jsonType.label": "String",
                            "access.token.claim": true,
                            "id.token.claim": false,
                            "userinfo.token.claim": false,

                            "introspection.token.claim": true
                        }
                    },
                    "scopes":[
                        {"name":"mcp:tools", "type":"default"}

                    ]
                }



            ]

        }
    ]
}
