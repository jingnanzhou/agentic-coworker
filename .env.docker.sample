# Combined Environment Variables for Docker Environment
# Copy this file to .env.docker and fill in your external service credentials

ENV_LOADED=true

# ==========================================
# PORT CONFIGURATION
# ==========================================
INTEGRATOR_PORT=6060
MCP_PORT=6666
SUPPORT_PORT=5000

# ==========================================
# AGENT STUDIO (from agent-studio/.env.docker)
# ==========================================
LOGIN_PROVIDER=keycloak
NEXTAUTH_SECRET=host-secret
SECRET_KEY=e6f8185a8c9b717083c4b82227481a3d7b1697cc6ef90fa47bef0b861935d325

# ==========================================
# INTEGRATOR
# ==========================================
MAX_TEXT_EXTRACTION_LENGTH=20000

# ==========================================
# IAM (Identity and Access Management)
# ==========================================
IAM_URL=http://host.docker.internal:8888
ISSUER_VALIDATION=true

# ==========================================
# MCP (Model Context Protocol)
# ==========================================
MCP_URL=http://host.docker.internal:6666/sse
MCP_TRANSPORT=sse
AUTHORIZATION_ENABLED=true
META_AUTHORIZATION_LINK=http://localhost:3000

# ==========================================
# SERVICE URLS
# ==========================================
INTEGRATOR_URL=http://host.docker.internal:6060
PROXY_URL=http://traefik

# ==========================================
# LANGCHAIN MODEL CONFIGURATION
# ==========================================
MODEL_PROVIDER=azure_openai
AZURE_OPENAI_API_KEY=<your-azure-openai-api-key>
AZURE_OPENAI_ENDPOINT=<your-azure-openai-endpoint-url>
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_MODEL=gpt-5
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5

# Alternative Google AI Configuration (commented out)
#MODEL_PROVIDER=google_genai
#GOOGLE_MODEL=gemini-2.5-flash
#GOOGLE_EMBEDDING_MODEL=models/gemini-embedding-001
#GOOGLE_API_KEY=<your-google-api-key>

# ==========================================
# GRAPHITI CONFIGURATION
# ==========================================
GRAPHITI_ENABLED=false
GRAPHITI_URI=bolt://neo4j:7687
GRAPHITI_USER=neo4j
GRAPHITI_PASSWORD=password

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://user:password@postgres:5432/agent-studio

# ==========================================
# NEO4J CONFIGURATION
# ==========================================
NEO4J_URI=neo4j://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ==========================================
# ETCD CONFIGURATION
# ==========================================
ETCD_HOST=etcd
ETCD_PORT=2379
# Alternative configuration for host.docker.internal access:
#ETCD_HOST=host.docker.internal
#ETCD_PORT=12379

# ==========================================
# NATS CONFIGURATION
# ==========================================
NATS_QUEUE_URL=nats://nats:4222
